                        </tr>
                    </thead>

                    @*<tfoot>
                        <tr>
                            <th colspan='3'>
                                Year: 2014
                            </th>
                        </tr>
                    </tfoot>*@
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                        <tr id="@item.ID">

                            <td style="width:30%">
                                @item.title
                            </td>
                            <td  style="width:40%"></td>
                            <td></td>

                            <td class="btn-grad gradBotton ViewClones">
                                مشاهده نسخه ها
                            </td>
                            <td></td>

