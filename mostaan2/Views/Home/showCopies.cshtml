@model IEnumerable<mostaan2.ViewModel.showCopiesVM>
@{
    ViewBag.Title = "showCopies";
}

@section scripts{
    <script>
        $("#addNewItem").click(function () {
            location.href = "/home/createCopy?rowID=@ViewBag.itemID";
        });
    </script>
    <script>
        $(".ViewItem").click(function () {
            tobedeleted = $(this).parent().attr('id');
            window.location.href = "/home/showReport/" + tobedeleted;
        });
    </script>
}

<div class="morphism">
    <link href="~/Content/custom.css" rel="stylesheet" />

    <div class="formParent" id="removePopUp">
        <div class="middlParent " style="">
            <div id="formHolder">
                <link href="~/Content/formStyle.css" rel="stylesheet" />
                <div class="containerr">
                    <form style="padding:2em">
                        <p style="font-size:16px; font-weight:500;margin-bottom:20px">آیا از حذف آیتم مورد نظر اطمینان دارید</p>
                        <div style="display:flex;margin-bottom: -40px;margin-top: 40px;">
                            <input id="verifyRemove" type="button" value="تایید"><br>
                            <input id="cancelRemove" type="button" value="لغو"><br>

                        </div>


                    </form>

                    <div class="drops">
                        <div class="drop drop-1"></div>
                        <div class="drop drop-2"></div>
                        <div class="drop drop-3"></div>
                        <div class="drop drop-5"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="display:flex;height:100%">
         @{Html.RenderAction("menu", "Home");}

        <div style="flex:1; padding:20px ">
            <div style="display:flex;align-items: center;justify-content: space-between;">
                <h1 class="pageHeading" style="">
                    لیست نسخه ها
                </h1>

                <p class="btncheckAdd btn-grad" id="addNewItem">

                    نسخه جدید
                </p>
            </div>

            <main>
                <table>
                    <thead>
                        <tr>

                            <th>
                                ردیف
                            </th>
                            <th>
                                نسخه
                            </th>
                            <th>
                                تاریخ
                            </th>
                            <th>
                                مشاهده
                            </th>


                        </tr>
                    </thead>

                    @*<tfoot>
                            <tr>
                                <th colspan='3'>
                                    Year: 2014
                                </th>
                            </tr>
                        </tfoot>*@
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr id="@item.ID">

                                    <td>
                                        @item.ID
                                    </td>
                                    <td>
                                        @item.count
                                    </td>
                                    <td>
                                        @item.date
                                    </td>
                                    <td class="btn-grad gradBotton ViewItem" style="padding:15px">
                                        مشاهده
                                    </td>



                                </tr>
                            }
                        }




                    </tbody>
                </table>

            </main>

        </div>

    </div>

</div>
