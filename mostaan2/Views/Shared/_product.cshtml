@model List<mostaan2.Model.product>


<div style="display:flex;align-items: center;justify-content: space-between;">
    <h1 class="pageHeading" style="">
        لیست محصول ها
    </h1>
    <p  onclick="productFormbtn()" class="btn-grad">
        محصول جدید
    </p>

</div>
<main>
    <table>
        <thead>
            <tr>
                <th>ردیف</th>
                <th>
                   شرح محصول
                </th>
                <th>
                    تعداد محصول
                </th>


                <th>
                    فی محصول
                </th>
                <th>
                   تعداد دریافتی
                </th>
               
                <th>

                </th>
            </tr>
        </thead>

        @*<tfoot>
                <tr>
                    <th colspan='3'>
                        Year: 2014
                    </th>
                </tr>
            </tfoot>*@
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    int index = Model.ToList().IndexOf(item) + 1;
            <tr name="deletProduct" id="@item.ID">

                <td>
                    @index
                </td>
                <td>
                    @item.title
                </td>
                <td>
                    @item.count
                </td>


                <td>
                    @{
                        long prc = String.IsNullOrEmpty(@item.price) ? 0 : Int64.Parse(item.price);
                    }
                    @String.Format("{0:n0}", prc)
                </td>
                <td>
                    @item.isDeliverd
                </td>


                <td class="btn-grad gradBotton remove" onclick="showRemoveModal(this)">
                    حذف
                </td>


            </tr>
                }
            }




        </tbody>
    </table>

</main>